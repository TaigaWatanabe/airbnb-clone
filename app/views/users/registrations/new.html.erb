<div class="container text-center col-3">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "shared/devise_messages", resource: resource %>

    <div class="field signup-field">        
        <%= f.text_field :name, placeholder: "Full Name", autofocus: true, autocomplete: "name", class: "wid form-control" %>
    </div>

    <div class="field  signup-field">        
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "wid form-control" %>
    </div>

    <div class="field  signup-field">        
        <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password" , class: "wid form-control" %><br>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/>        
    </div>

    <div class="field signup-field">        
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "new-password", class: "wid form-control" %>
    </div>

    <div class="actions signup-field signup-bottom">
        <%= f.submit "Sign up", class: "btn btn-outline-info wid" %>
    </div>
    <% end %>

    <%#= render "users/shared/links" %>
</div>
