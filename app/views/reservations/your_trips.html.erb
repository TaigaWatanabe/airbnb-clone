<div class="row container your_trips">
    <%= render "layouts/rooms_sidebar" %>
    <div class="card right-card">
        <h5 class="card-header">Your Trips</h5>
        <div class="card-body">
            <% @reservations.each do |reservation| %>
                <div class="container border-bottom pt-3 pb-3">
                    <div class="row">
                        <div class="col-3">
                            <%= reservation.start_date %>
                            <br>~<br>
                            <%= reservation.end_date %>
                        </div>
                        <div class="col-3" >                            
                            <%= image_tag reservation.room.photos.first.image, width: "100" %>                           
                        </div>
                        <div class="col-3">
                            <%= link_to reservation.room.listing_name, "#" %><br>
                            <%= link_to reservation.room.user.name, "#" %>
                        </div>
                        <div class="col-3">
                            <!-- Button trigger modal -->
                            <button type="button" class="save-bnt btn btn-info update-btn" data-toggle="modal" data-target="#exampleModal">
                                Review Host
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Review Host</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <textarea class="w-100 border"></textarea>
                                            <div class="text-center mt-3">
                                                <button type="button" class="save-bnt btn btn-info update-btn" data-dismiss="modal">Add Review</button> 
                                            </div>
                                        </div>                                        
                                    </div>
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>