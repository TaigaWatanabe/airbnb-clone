<% if flash.any? %>
    <% flash.each do |type, msg|%>
        <div class="container">
            <div class="alert mt-3 alert-<%= type %> alert-dismissible fade show" role="alert">
                <strong><%= msg%></strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    <% end %>
<% end%>