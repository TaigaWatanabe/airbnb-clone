<div class="row container rooms-index">
    <div class="card left-card">
        <div class="card-body">
            <p><%= link_to "Your Rooms",rooms_path, class: "text-info" %></p>
            <p><%= link_to "Your Reservations",rooms_path, class: "text-info" %></p>
            <p><%= link_to "Your Trips",rooms_path, class: "text-info" %></p>
        </div>
    </div>
    <div class="card right-card">
        <h5 class="card-header">Your Rooms</h5>
        <div class="card-body">
            <% @rooms.each do |room| %>
                <div class="container">
                    <div class="row">
                        <div class="col-2" >images</div>
                        <div class="col-8" >Room Name</div>
                        <%= link_to "Update",rooms_path, class: "save-bnt btn btn-info col-2" %>
                        <%#= room.submit "Update", class: "save-bnt btn btn-info  form-control" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>